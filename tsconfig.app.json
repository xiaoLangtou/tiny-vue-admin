{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "bundler",
        "strict": false,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "es2020",
            "dom"
        ],
        "skipLibCheck": true,
        "types": [
            "vite/client"
        ],
        "allowJs": true
    },
    "include": [
        "src/**/*",
        "src/**/*.vue",
        "src/**/**/*.vue",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/types/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
